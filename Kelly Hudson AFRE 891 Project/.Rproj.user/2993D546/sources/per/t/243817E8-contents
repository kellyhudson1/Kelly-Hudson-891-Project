                                margin = margin(0.05, 0, 0.05, 0, "cm")),
    strip.background = element_rect(fill = "white"),
    legend.position = "bottom",
    panel.grid = element_blank(),
    axis.text.x = element_text(size = 5, angle = 90, vjust = 0),
